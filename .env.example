# Shared
PORT=3000
DATA_DIR=./data
DATABASE_URL=file:./data/factory-rag.db
JWT_SECRET=change-me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Upload and retrieval tuning
UPLOAD_MAX_SIZE_MB=25
CHUNK_SIZE_CHARS=4500
CHUNK_OVERLAP_CHARS=600
RAG_TOP_K=8
RAG_MIN_SIMILARITY=0.48
RATE_LIMIT_PER_MINUTE=30

# Ollama (offline default)
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_CHAT_MODEL=llama3.1:8b
OLLAMA_EMBED_MODEL=nomic-embed-text

# HF remote (optional; disabled unless enabled via /api/providers)
HF_TIMEOUT_MS=20000
HF_CHAT_ENDPOINT=https://api-inference.huggingface.co/models
HF_EMBED_ENDPOINT=https://api-inference.huggingface.co/pipeline/feature-extraction
ALLOW_REMOTE_HF_CONTEXT=false

# Client
VITE_API_URL=http://localhost:3000
